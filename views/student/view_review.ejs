<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student home</title>
    <link rel="stylesheet" href="/style/homepage.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,100,1,0"/>
  </head>
  <body style="min-width: 300px">
    <%- include('../partials/_navbar') %> 
    <section class="review-section"> 
      <div class="container review-container-moderator">
          <article class="each-review each-review-big">
              <div class="review-header-flagged">
                  <div class="header-flagged">
                      <h3><%= review.subjectCode %> </h3>
                      <h4><%= review.subjectName %></h4>
                  </div>
                  
                  <div class="star-review">
                      <span class="material-symbols-outlined">star</span>
                      <span class="material-symbols-outlined">star</span>
                      <span class="material-symbols-outlined">star</span>
                      <span class="material-symbols-outlined">star</span>
                      <span class="material-symbols-outlined">star</span>
                  </div>
              </div>
              
              <p><%= review.content %></p>
              <h7><b>Example student</b> <%= review.createdAt.toLocaleDateString() %></h7>

              <div class="review-footer">
                  <button class="like-button small-buttn"><img src="/static/Like%20symbol.png">111</button>
                  <h8>2 Replies</h8>
                  <h8>Visable</h8>
              </div>
          </article>

          <div class = "inline comment-area">
            <form action = "/student/subject/<%= review.subjectCode %>/view_review/<%= review.id %>" method = "POST" class="inline">
                <textarea placeholder=" Add a comment..." name = "comment" class="comment-post"></textarea>
                <button class = "medium-buttn post-bttn">Post</button>
            </form>
          </div>
          
          <% review.comment_content.forEach(comment => { %>
            <article class="each-review each-review-big each-comment">
                    <h7><b style="font-size: 22px;">Example(Myself) </b>date</h7>
                    <p><%= comment.content %></p>
                    <div class="inline">
                        <form>
                            <button class="like-bttn small-buttn"><img src="/static/Lke symbol (white).png">111</button>
                        </form>
                        <form action="/student/subject/<%= review.subjectCode %>/view_review/<%= review.id %>/<%= comment.id %>?_method=DELETE" 
                            method = "POST">
                            <button class="remove-bttn small-buttn">Remove</button>
                        </form>
                    </div>
                    <hr class="solid">
            </article>
         <% }) %> 
      </div>
    </section>

    
  </body>
</html>