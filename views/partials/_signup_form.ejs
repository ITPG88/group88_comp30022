<form action="/signup" method="post" id="signup">
  <div class="content">
    <div class="login">
      <div class="logo">
        <img src="/assets/img/Subject%20Review%20Logo.png" alt="" />
      </div>

      <div
        id="err"
        style="
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          width: 270px;
          min-height: 50px;
          padding: 5% 2.5% 5% 5%;

          border: 2px solid red;
          border-radius: 20px;
          text-align: center;
          background-color: #2e0000;
          color: aliceblue;
          font-weight: 600;
          font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
            Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        "
      ></div>

      <ul>
        <li><label>Username</label></li>
        <li>
          <input
            required
            type="text"
            placeholder="Enter your username"
            name="username"
            value="<%=username%>"
          />
        </li>
      </ul>

      <ul>
        <li><label>Name</label></li>
        <li>
          <input
            required
            type="text"
            placeholder="Enter your name"
            name="fullName"
            value="<%=fullName%>"
          />
        </li>
      </ul>

      <ul>
        <li><label>Email</label></li>
        <li>
          <input
            required
            type="text"
            placeholder="Enter your email address"
            name="email"
            value="<%=email%>"
          />
        </li>
      </ul>

      <ul>
        <li><label>Password</label></li>
        <li>
          <input
            required
            type="password"
            placeholder="Enter your password"
            name="password"
          />
        </li>
      </ul>
    </div>

    <div class="signupbutton">
      <button type="submit">Sign Up</button>
    </div>
    <p>Already have an account?<a href="/login"> Sign in</a></p>
  </div>
</form>

<script>
      const errElement = document.getElementById("err");


        const errors = <%-JSON.stringify(locals.errors)%>
        console.log(errors);
  for (const err of errors) {
      errElement.insertAdjacentHTML('beforeend', "<li  style = \"margin: 5px 0;\" >"+err+"</li>")
  }
</script>
