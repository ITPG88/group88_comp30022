<form action="/login" method="post" id="login">
<div class="content">
    <div class="login">
        <div class="logo">
            <img src="/assets/img/Subject%20Review%20Logo.png" alt="" />
        </div>

        <ul>
            <li><label>Username</label></li>
            <li>
                <input
                        type="text"
                        placeholder=" Enter your email address or user ID"
                />
            </li>
        </ul>

        <ul>
            <li><label>Password</label></li>
            <li><input type="password" placeholder=" Enter your password" /></li>
        </ul>
    </div>

    <a href="/forgot_password" style="padding-left: 200px; font-size: 14px"
    >Forget password?
    </a>

    <div class="loginbutton">
        <button type="submit">Login</button>
    </div>
    <p>Don't have an account?<a href="/signup"> Sign up</a></p>
</div>

</form>