<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Moderator home flagged review</title>
    <link rel="stylesheet" href="/style/homepage.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,100,1,0"
    />
  </head>
  <body style="min-width: 300px">
    <%- include('../partials/navbars/_student_navbar') %>
    <%- include('../partials/_moderator-fr-header') %>

    <section class="review-section">
        <div class="container review-button-moderator">
            <button class="flagged-review-button big-buttn" type="button"><a href="Moderator-Homepage(Flagged review).html">Flagged review</a></button>
            <button class="new-subject-button big-buttn" type="button"><a href="Moderator-Homepage(New%20Subject).htmlml">New subject</a></button>
        </div>  
        <div class="container review-container-moderator review-container-fr">
            <% reviews.forEach(review => { %>
                <% if(review.status == "FLAGGED"){ %>
                    <article class="each-review each-review-big">
                        <div class="review-titlebar">
                            <div>
                                <h5>Disrespectful! Please delete it.</h6>
                            </div>
                            <div class = "inline">
                                <form action="/home/flagged/<%= review._id %>/neglect" method="POST">
                                    <button class="neglect-button medium-buttn">Neglect</button>
                                </form>
                                <form action="/home/flagged/<%= review._id %>/remove" method="POST">
                                    <button class="remove-button small-buttn">Remove</button>
                                </form>
                            </div>
                        
                        </div>
        
                        <div class="review-header-flagged">
                            <div class="header-flagged">
                                <h3> <%= review.subject.subjectCode %> </h3>
                                <h4>University of Melbourne</h4>
                            </div>
                            
                            <div style = "margin-top: 8px;" class="star-review">
                                <span class="material-symbols-outlined">star</span>
                                <span class="material-symbols-outlined">star</span>
                                <span class="material-symbols-outlined">star</span>
                                <span class="material-symbols-outlined">star</span>
                                <span class="material-symbols-outlined">star</span>
                            </div>
                        </div>
                        
                        <p><%= review.content %> </p>
                        
                        <h7><b style="margin-right: 10px;"><%= (review.author.fullName!=null) ? `${review.author.fullName}` : 'Anonymous'%> </b>date</h7>
        
                        <div class="review-footer">
                            <button class="like-button small-buttn"><img src="/assets/img/Like%20symbol.png">111</button>
                            <h8>2 Replies</h8>
                            <h8>Visable</h8>
                        </div>
                    </article>
                    <% } else{ %>  
                    <% } %>
            <% }) %> 

        </div>

    </section>
  </body>
</html>
    